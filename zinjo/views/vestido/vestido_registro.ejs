<div class="container">
    <form action="/vestido/crear/<%=valor.idUsuario%>" enctype="multipart/form-data" method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="form-group row">
                <label for="pic" class="form-control-label col-sm-10 boton boton-sin-seleccion text-box" id="lb-imagen"><img src="https://images.vexels.com/media/users/3/142827/isolated/lists/98e256ca2935093c9082795b3659e3f7-stroke-dress.png"/></label>
                <div class="col-sm-9" style="margin-left: 10px">
                    <input id="pic"
                           name="pic"
                           type="file"
                           accept="image/*"
                           hidden
                           onchange="validarArchivos()">
                </div>
            </div>
            <div class="imgPreview text-box">
                <img id="imgMuestra" src=""  class="maxW">
            </div>
        </div>

        <div class="form-group col-md-6">
            <div class="form-group row">
                <label for="talla" class="col-sm-2 col-form-label">Talla</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control"name="talla" id="talla">
                </div>
            </div>
            <div class="form-group row">
                <label for="color" class="col-sm-2 col-form-label">Color</label>
                <div class="col-sm-4">
                    <input type="text"class="form-control" name="color" id="color">
                </div>
            </div>
            <div class="form-group row">
                <label for="estado" class="col-sm-2 col-form-label">Estado</label>
                <div class="col-sm-6">
                    <input type="text"class="form-control" name="estado" id="estado">
                </div>
            </div>
            <div class="form-group row">
                <label for="precio" class="col-sm-2 col-form-label">Precio</label>
                <div class="col-sm-4">
                    <input type="text"class="form-control" name="precio" id="precio">
                </div>
            </div>
            <div class="form-group purple-border row">
                <label for="descripcion" class="col-sm-2 col-form-label">Descripción</label>
                <div class="col-sm-12">
                    <textarea class="form-control rounded-0" name="descripcion" id="descripcion" rows="5"></textarea>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="button" class="btn btn-danger">Cancelar</button>
                    <button type="submit" value="Submit" class="btn btn-success">Vender Vestido</button>
                </div>
            </div>
        </div>
    </div>
    </form>
</div>
<script>
    function validarArchivos(){
        const archivo = document.getElementById('pic');
        console.log(archivo.files);
        const boton = document.getElementById("lb-imagen");
        if(archivo.files.length>0){
            boton.classList.remove("boton-sin-seleccion");
            boton.classList.add("boton-seleccionado");
            boton.innerText="Imagen seleccionada";
            const file = archivo.files[0];
            const reader = new FileReader();
            reader.onload = (eventoLecturaArchivo =>{
                const url = eventoLecturaArchivo.target.result;
                console.log(url);
                const imagenMuestra = document.getElementById('imgMuestra');
                imagenMuestra.src = url;
            });
            reader.readAsDataURL(file);
        }else{
            boton.classList.remove("boton-seleccionado");
            boton.classList.add("boton-sin-seleccion");
            boton.innerText="Subir imagen";
        }
    }
</script>
